<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <welcome-file-list>
      <welcome-file>first.html</welcome-file>
  </welcome-file-list> 
  <servlet>
  	<servlet-name>login</servlet-name>
  	<servlet-class>com.service.Login</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>login</servlet-name>
  	<url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet>
  	<servlet-name>dashboard</servlet-name>
  	<servlet-class>com.service.Dashboard</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>dashboard</servlet-name>
  	<url-pattern>/dashboard</url-pattern>
  </servlet-mapping>
    <servlet>
  	<servlet-name>registration</servlet-name>
  	<servlet-class>com.service.Registration</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>registration</servlet-name>
  	<url-pattern>/register</url-pattern>
  </servlet-mapping>
  <servlet>
  	<servlet-name>logout</servlet-name>
  	<servlet-class>com.service.Logout</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>logout</servlet-name>
  	<url-pattern>/logout</url-pattern>
  </servlet-mapping>
<filter>
    <filter-name>authFilter</filter-name>
  <filter-class>com.service.Gatekeeper</filter-class>
  </filter>
  <filter-mapping>
  	<filter-name>authFilter</filter-name>
  	<url-pattern>/secure/dashboard</url-pattern>
  </filter-mapping>
<filter>
    <filter-name>loginFilter</filter-name>
  <filter-class>com.service.Lazylogin</filter-class>
  </filter>
  <filter-mapping>
  	<filter-name>loginFilter</filter-name>
  	<url-pattern>/secure/login</url-pattern>
  </filter-mapping>
</web-app>